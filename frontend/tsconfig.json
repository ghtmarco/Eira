{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2017",
      "DOM"
    ],
    "jsx": "react-native",
    "module": "preserve",
    "types": [
      "react",
      "react-native"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "App.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "./tsconfig.base.json"
}
